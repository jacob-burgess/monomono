{
	"name": "boogie",
	"module": "index.ts",
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.6.3"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"check": "biome check --apply .",
		"build": "bun run --cwd packages/package-a build && bun run --cwd packages/package-b build",
		"lint": "bun run lint",
		"lint:self": "biome lint",
		"format": "bun run format",
		"format:self": "biome format --config-path=biome.root.jsonc"
	},
	"type": "module",
	"workspaces": ["apps/*", "packages/*", "tooling/*"]
}
